<Window x:Class="SuperheroLog.CharacterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SuperheroLog"
        mc:Ignorable="d"
        Title="Character Window" 
        Height="450" 
        Width="900" 
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#091C32"
        Loaded="Window_Loaded">
    <Grid Margin="0,30,30,30">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="30*"/>
            <ColumnDefinition Width="80*"/>
            <ColumnDefinition Width="30*"/>
            <ColumnDefinition Width="30*"/>
        </Grid.ColumnDefinitions>
        
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        
        <Label
            Grid.Column="0"
            Grid.Row="0" 
            Content="CharacterNo" 
            HorizontalAlignment="Center" 
            VerticalAlignment="Center"
            Foreground="#ffffff"/>

        <TextBox 
            Grid.Column="1" 
            Name="txtCharacterNo"
            Height="30"
            VerticalAlignment="Center"
            TextWrapping="Wrap" 
            PreviewTextInput="TxtCharacterNo_PreviewTextInput"/>

        <Label
            Grid.Column="0"
            Grid.Row="1" 
            Content="Alias" 
            HorizontalAlignment="Center" 
            VerticalAlignment="Center"
            Foreground="#ffffff"/>

        <TextBox 
            Grid.Column="1"
            Grid.Row="1" 
            Name="txtAlias" 
            Height="30"
            VerticalAlignment="Center" 
            TextWrapping="Wrap"/>

        <Label
            Grid.Column="0"
            Grid.Row="2" 
            Content="Name" 
            HorizontalAlignment="Center" 
            VerticalAlignment="Center"
            Foreground="#ffffff"/>
        
        <TextBox 
            Grid.Column="1"
            Grid.Row="2" 
            Name="txtName" 
            Height="30"
            VerticalAlignment="Center" 
            TextWrapping="Wrap"/>

        <Label
            Grid.Column="0" 
            Grid.Row="3"
            Content="Surname"
            HorizontalAlignment="Center" 
            VerticalAlignment="Center"
            Foreground="#ffffff"/>
        
        <TextBox 
            Grid.Column="1"
            Grid.Row="3" 
            Name="txtSurname" 
            TextWrapping="Wrap" 
            VerticalAlignment="Center" 
            Height="30"/>
        
        <Label
            Grid.Column="0" 
            Grid.Row="4"
            Content="Image"
            HorizontalAlignment="Center" 
            VerticalAlignment="Center"
            Foreground="#ffffff"/>
        
        <TextBox 
            Grid.Column="1"  
            Grid.Row="4"
            Name="txtImage"
            IsReadOnly="True"
            TextWrapping="Wrap" 
            VerticalAlignment="Center" 
            Height="30"/>

        <Button             
            Grid.Column="2"  
            Grid.Row="4"
            Content="Upload"
            x:Name="btnUpload"
            Width="100"
            Height="30" 
            Cursor="Hand"
            Click="BtnUpload_Click"/>

        <Image
            Grid.Column="3" 
            Grid.ColumnSpan="2"
            Grid.Row="1" 
            Grid.RowSpan="3"  
            x:Name="CharacterImage"
            Width="180"
            Height="180"/>

        <Label
            Grid.Column="0"
            Grid.Row="5"
            Content="Universe"  
            HorizontalAlignment="Center" 
            VerticalAlignment="Center"
            Foreground="#ffffff"/>
        
        <ComboBox
            Grid.Column="1" 
            Grid.Row="5" 
            Name="cmbUniverse"
            Height="30"
            VerticalAlignment="Center" 
            SelectionChanged="CmbUniverse_SelectionChanged"/>
        
        <Label
            Grid.Column="0"
            Grid.Row="6"
            Content="Team" 
            HorizontalAlignment="Center" 
            VerticalAlignment="Center"
            Foreground="#ffffff"/>
        
        <ComboBox
            Grid.Column="1" 
            Grid.Row="6" 
            Name="cmbTeam" 
            Height="30"
            VerticalAlignment="Center"/>

        <Label
            Grid.Column="0"
            Grid.Row="7"
            Grid.RowSpan="2"
            Content="Bio"
            HorizontalAlignment="Center" 
            VerticalAlignment="Center"
            Foreground="#ffffff"/>
        
        <RichTextBox 
            x:Name="txtBio" 
            Grid.Column="1"
            Grid.ColumnSpan="3"
            Grid.Row="7" 
            Grid.RowSpan="2"
            Width="auto"
            HorizontalAlignment="Stretch" 
            Margin="0,0,0,5"/>

        <Button
            Grid.Column="2" 
            Grid.Row="9"
            x:Name="btnSave" 
            Content="Save"
            Cursor="Hand"
            Click="BtnSave_Click"/>
        
        <Button
            Grid.Column="3" 
            Grid.Row="9"
            x:Name="btnClose" 
            Content="Close"
            Cursor="Hand"
            Click="BtnClose_Click"/>
    </Grid>
</Window>
